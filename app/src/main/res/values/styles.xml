<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SearchTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @android:color/background_dark
        </item>
    </style>

    <style name="SettingsTheme" parent="Theme.MaterialComponents.Light.DarkActionBar" />

    <style name="NightMode" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name = "android:textColor">#cccccc</item>
        <item name = "android:background">#000000</item>
    </style>

    <style name="dayMode" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name = "android:textColor">#4e4e4e</item>
        <item name = "android:background">#FFFFFF</item>
    </style>

</resources>